<%- include('layout.ejs'); %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2></h2>
            <div class="card">
                <div class="card-header" id="registerTitle">Register</div>
                <div class="card-body">

                    <form class="form-horizontal" id="registrationForm" method="post" action="/register">

                        <div class="form-group">
                            <label for="name" class="cols-sm-2 control-label">Your Name</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon loginRegisterIconArea">
                                        <i class="fa fa-user fa-lg loginRegisterIcons" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" class="form-control" name="name" id="name" placeholder="Enter your Name" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email" class="cols-sm-2 control-label">Your Email</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon loginRegisterIconArea">
                                        <i class="fa fa-envelope fa-lg loginRegisterIcons" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" class="form-control" name="email" id="email" placeholder="Enter your Email" />
                                </div>
                                <span id="emailRequirementResult">
                                    <i class="fa fa-triangle-exclamation" id="emailValidationIcon"></i>
                                    Email invalid
                                </span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="cols-sm-2 control-label">Password</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon loginRegisterIconArea">
                                        <i class="fa fa-lock fa-lg loginRegisterIcons" aria-hidden="true"></i>
                                    </span>
                                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter your Password" />
                                    <span class="showPassword" id="passwordShowPassword">
                                        <i class="fa fa-eye showPasswordIcon" aria-hidden="true" id="showPassword"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="confirm" class="cols-sm-2 control-label">Confirm Password</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon loginRegisterIconArea">
                                        <i class="fa fa-lock fa-lg loginRegisterIcons" aria-hidden="true"></i>
                                    </span>
                                    <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Confirm your Password" />
                                    <span class="confirmationStatus" id="statusIcon">
                                        <i class="fa fa-xmark fa-lg confirmationStatusIcon" aria-hidden="true" id="confirmIcon"></i>
                                    </span>
                                    <span class="showPassword" id="confirmShowPassword">
                                        <i class="fa fa-eye showPasswordIcon" aria-hidden="true" id="showConfirmation"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group ">
                            <button type="submit" class="btn btn-primary btn-lg btn-block login-button disabledButton" id="registerButton" disabled="disabled">Register</button>
                        </div>
                        <div id="outputField">
                            <p class="loginRegisterErrorText" id="errorOutput">hello</p>
                        </div>
                        <div class="login-register">
                            <a href="/login">Login</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

</body>
</html>