<%- include('layout.ejs'); %>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2></h2>
            <div class="card">
                <div class="card-header" id="loginTitle">Login</div>
                <div class="card-body">

                    <form class="form-horizontal" id="loginForm" method="post" action="/login">


                        <div class="form-group">
                            <label for="email" class="cols-sm-2 control-label">Your Email</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon loginRegisterIconArea">
                                        <i class="fas fa-envelope fa-lg loginRegisterIcons" aria-hidden="true"></i>
                                    </span>
                                    <input type="text" class="form-control" name="email" id="email" placeholder="Enter your Email" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="password" class="cols-sm-2 control-label">Password</label>
                            <div class="cols-sm-10">
                                <div class="input-group">
                                    <span class="input-group-addon loginRegisterIconArea">
                                        <i class="fas fa-lock fa-lg loginRegisterIcons" aria-hidden="true"></i>
                                    </span>
                                    <input type="password" class="form-control" name="password" id="password" placeholder="Enter your Password" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group ">
                            <button type="submit" class="btn btn-primary btn-lg btn-block login-button disabledButton" id="loginButton" disabled="disabled">Login</button>
                        </div>
                        <div id="outputField">
                            <p class="loginRegisterErrorText" id="errorOutput">hello</p>
                            <div id="passwordOutput">
                                <p class="loginRegisterPasswordSpecs">Your Password needs at least:</p>
                                <ul class="loginRegisterPasswordSpecsList">
                                   <li id="passwordLength">A length of at least 8</li>
                                    <li id="passwordBigLetter">One uppercase letter</li>
                                    <li id="passwordSmallLetter">One lowercase letter</li>
                                    <li id="passwordNumber">One number</li>
                                    <li id="passwordSpecialChar">One special character</li>
                                </ul>
                            </div>
                        </div>
                        <div class="login-register">
                            <a href="/register">Register</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

</body>
</html>